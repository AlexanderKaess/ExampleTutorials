    <!--Stackpanel = Ordnet die Komponten nach der Reihe untereinander an-->
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="20" TextWrapping="Wrap" Text="Hallo World"/>
        
        <ListBox Height="100" Width="100">
            <ListBoxItem Content="Element1"/>
            <ListBoxItem Content="Element2"/>
            <ListBoxItem Content="Element3"/>
            <Button Content="Button" Width="75"/>
        </ListBox>
        
        <!--Button ist Sender des Click-Event an MainWindow.xaml.cs-->
        <Button Content="Klicke mich - Direkter Event" Click="Button_Click" Margin="20"/>
        <Button Content="Klicke mich - MouseUP" MouseUp="Button_MouseUp" Margin="20"/>
        <Button Content="Klicke mich - PreviewMouseUp" PreviewMouseUp="Button_PreviewMouseUp" Margin="20"/>

    </StackPanel>
